{
  "$schema": "https://zed.dev/schema/themes/v0.2.0.json",
  "name": "Retrokai",
  "author": "Henrique Sardinha",
  "themes": [
    {
      "appearance": "dark",
      "name": "Retrokai",
      "style": {
        /* --- FUNDOS (Máximo de 3 Tons) --- */
        /* BG Principal: #242226 (RK_BG_MAIN) */
        /* BG Superfície: #2D2B30 (RK_BG_LIGHT) */
        /* BG Seleção: #4B4950 (RK_BG_SELECT) */

        /* FG Principal: #F8F5F2 */
        /* FG Dim: #7C7882 */

        "editor.foreground": "#F8F5F2",
        "editor.background": "#242226",
        "editor.gutter.background": "#242226",
        "editor.active_line.background": "#2D2B30",
        "editor.line_number": "#7C7882",
        "editor.active_line_number": "#F8F5F2",
        "editor.indent_guide": "#7C788288",
        "editor.indent_guide_active": "#B0ACB5AA",
        "editor.invisible": "#7C7882",
        "editor.wrap_guide": "#7C788244",
        "editor.active_wrap_guide": "#7C788288",
        /* RK_CYAN (Aqua-Green) com Opacidade */
        "editor.document_highlight.read_background": "#4CE4B01A",
        /* RK_FG_DIM com Opacidade */
        "editor.document_highlight.write_background": "#7C788266",
        "editor.subheader.background": "#2D2B30",
        "editor.highlighted_line.background": "#2D2B30",

        "ghost_element.active": "#B0ACB5",
        "ghost_element.hover": "#2D2B30",
        "ghost_element.selected": "#4B4950",
        "ghost_element.background": "#2D2B30",

        "border": "#2D2B30",
        "border.variant": "#2D2B30",
        "border.focused": "#2D2B30",
        "border.selected": "#2D2B30",
        "border.transparent": "transparent",
        "border.disabled": "#2D2B30",

        "text": "#F8F5F2",
        "text.muted": "#7C7882",
        "text.placeholder": "#7C7882",
        "text.disabled": "#7C7882",
        "text.accent": "#4CE4B0",

        "surface.background": "#2D2B30",
        "elevated_surface.background": "#2D2B30",
        "panel.background": "#242226",
        /* RK_PURPLE com Opacidade */
        "panel.focused_border": "#AE81FF44",
        "background": "#242226",
        "status_bar.background": "#242226",
        "title_bar.background": "#242226",
        "title_bar.inactive_background": "#242226",
        "toolbar.background": "#242226",
        "tab_bar.background": "#2D2B30",
        "tab.inactive_background": "#2D2B30",
        "tab.active_background": "#242226",

        "element.background": "#2D2B30",
        "element.hover": "#4B4950",
        "element.active": "#4B4950",
        "element.selected": "#4B4950",
        "element.disabled": "#4B4950",
        /* RK_FG_MAIN com Opacidade */
        "drop_target.background": "#F8F5F280",

        "predictive": "#7C7882",
        "modified": "#FD971F" /* RK_ORANGE */,
        "ignored": "#7C7882",
        "deleted": "#F92672" /* RK_RED (Magenta) */,
        "created": "#A6E22E" /* RK_GREEN */,
        "warning": "#E6DB74" /* RK_YELLOW */,
        "warning.background": "#2D2B30",
        "warning.border": "#E6DB74",
        "hint": "#AE81FF" /* RK_PURPLE */,
        "hint.background": "#2D2B30",
        "error": "#F92672" /* RK_RED (Magenta) */,
        "error.background": "#2D2B30",
        "error.border": "#F92672",
        "info": "#66D9EF" /* RK_BLUE */,

        "scrollbar.thumb.background": "#4B49504D",
        "scrollbar.thumb.hover_background": "#2D2B304D",
        "scrollbar.thumb.border": "#2D2B304D",
        "scrollbar.track.background": "#00000000",
        "scrollbar.track.border": "#2D2B304D",

        "terminal.background": "#242226",
        "terminal.foreground": "#F8F5F2",
        "terminal.bright_foreground": "#F8F5F2",
        "terminal.dim_foreground": "#7C7882",

        "terminal.ansi.black": "#1A181C",
        "terminal.ansi.bright_black": "#7C7882",
        "terminal.ansi.dim_black": "#B0ACB5",

        "terminal.ansi.red": "#F92672",
        "terminal.ansi.bright_red": "#F92672",
        "terminal.ansi.dim_red": "#F92672",

        "terminal.ansi.green": "#A6E22E",
        "terminal.ansi.bright_green": "#A6E22E",
        "terminal.ansi.dim_green": "#A6E22E",

        "terminal.ansi.yellow": "#FD971F",
        "terminal.ansi.bright_yellow": "#E6DB74",
        "terminal.ansi.dim_yellow": "#FD971F",

        "terminal.ansi.blue": "#66D9EF",
        "terminal.ansi.bright_blue": "#66D9EF",
        "terminal.ansi.dim_blue": "#66D9EF",

        "terminal.ansi.magenta": "#AE81FF",
        "terminal.ansi.bright_magenta": "#AE81FF",
        "terminal.ansi.dim_magenta": "#AE81FF",

        "terminal.ansi.cyan": "#4CE4B0",
        "terminal.ansi.bright_cyan": "#4CE4B0",
        "terminal.ansi.dim_cyan": "#4CE4B0",

        "terminal.ansi.white": "#F8F5F2",
        "terminal.ansi.bright_white": "#F8F5F2",
        "terminal.ansi.dim_white": "#F8F5F2",

        "link_text.hover": "#4CE4B0",

        "conflict": "#E6DB74",
        "conflict.background": "#2D2B30",
        "conflict.border": "#E6DB74",

        "created.background": "#2D2B30",
        "created.border": "#A6E22E",

        "deleted.background": "#2D2B30",
        "deleted.border": "#F92672",

        "hidden.background": "#242226",
        "hidden.border": "#2D2B30",

        "ignored.background": "#242226",
        "ignored.border": "#2D2B30",

        "info.background": "#2D2B30",
        "info.border": "#66D9EF",

        "modified.background": "#2D2B30",
        "modified.border": "#FD971F",

        "predictive.background": "#2D2B30",
        "predictive.border": "#66D9EF",

        "renamed.background": "#2D2B30",
        "renamed.border": "#66D9EF",

        "success": "#A6E22E",
        "success.background": "#2D2B30",
        "success.border": "#A6E22E",

        "unreachable": "#7C7882",
        "unreachable.background": "#242226",
        "unreachable.border": "#2D2B30",

        "version_control.added": "#A6E22E",
        "version_control.deleted": "#F92672",
        "version_control.modified": "#FD971F",
        "version_control.conflict": "#E6DB74",
        "version_control.renamed": "#AE81FF",
        "version_control.ignored": "#7C7882",

        "version_control.conflict_marker.ours": "#FD971F33",
        "version_control.conflict_marker.theirs": "#4CE4B033",

        "players": [
          {
            "cursor": "#F8F5F2",
            "background": "#F8F5F2",
            "selection": "#F8F5F222"
          },
          {
            "cursor": "#4CE4B0",
            "background": "#4CE4B0",
            "selection": "#4CE4B044"
          },
          {
            "cursor": "#AE81FF",
            "background": "#AE81FF",
            "selection": "#AE81FF44"
          },
          {
            "cursor": "#66D9EF",
            "background": "#66D9EF",
            "selection": "#66D9EF44"
          },
          {
            "cursor": "#F92672",
            "background": "#F92672",
            "selection": "#F9267244"
          }
        ],

        /* --- SYNTAX HIGHLIGHTING (MONOKAI RULES) --- */
        "syntax": {
          /* Keywords, Storage Types, Operators, Tags: RED */
          "keyword": {
            "color": "#F92672"
          },
          "operator": {
            "color": "#F92672"
          },
          "tag": {
            "color": "#F92672"
          },

          /* Functions, Methods, Attributes, Titles: GREEN */
          "function": {
            "color": "#A6E22E"
          },
          "attribute": {
            "color": "#A6E22E"
          },
          "title": {
            "color": "#A6E22E",
            "font_weight": 700
          },
          "preproc": {
            "color": "#A6E22E"
          },

          /* Strings, Links: YELLOW */
          "string": {
            "color": "#E6DB74"
          },
          "string.regex": {
            "color": "#E6DB74"
          },
          "text.literal": {
            "color": "#E6DB74"
          },
          "link_uri": {
            "color": "#E6DB74"
          },
          "link_text": {
            "color": "#E6DB74",
            "font_style": "italic"
          },

          /* Numbers, Booleans, Constants, String Escapes: PURPLE */
          "number": {
            "color": "#AE81FF"
          },
          "boolean": {
            "color": "#AE81FF"
          },
          "constant": {
            "color": "#AE81FF"
          },
          "string.escape": {
            "color": "#AE81FF"
          },
          "emphasis": {
            "color": "#AE81FF",
            "font_style": "italic"
          },

          /* Types, Classes, Constructors: CYAN/BLUE */
          "type": {
            "color": "#4CE4B0",
            "font_style": "italic"
          },
          "constructor": {
            "color": "#4CE4B0"
          },
          "enum": {
            "color": "#4CE4B0"
          },
          "string.special": {
            "color": "#66D9EF"
          },
          "string.special.symbol": {
            "color": "#66D9EF"
          },
          "ion.special": {
            "color": "#66D9EF"
          },

          /* Special Variables, Variants: ORANGE */
          "variable.special": {
            "color": "#FD971F",
            "font_style": "italic"
          },
          "variant": {
            "color": "#FD971F"
          },
          "emphasis.strong": {
            "color": "#FD971F",
            "font_weight": 700
          },

          /* Variables, Properties, Punctuation: FG_MAIN */
          "variable": {
            "color": "#F8F5F2"
          },
          "property": {
            "color": "#F8F5F2"
          },
          "punctuation": {
            "color": "#F8F5F2"
          },
          "punctuation.bracket": {
            "color": "#F8F5F2"
          },
          "punctuation.delimiter": {
            "color": "#F8F5F2"
          },
          "punctuation.list_marker": {
            "color": "#F8F5F2"
          },
          "label": {
            "color": "#F8F5F2"
          },
          "embedded": {
            "color": "#F8F5F2"
          },

          /* Comments: FG_DIM */
          "comment": {
            "color": "#7C7882",
            "font_style": "italic"
          },
          "comment.doc": {
            "color": "#7C7882"
          },

          /* Others */
          "predictive": {
            "color": "#7C7882"
          },
          "hint": {
            "color": "#AE81FF"
          }
        }
      }
    }
  ]
}
